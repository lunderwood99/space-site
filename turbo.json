{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**"],
      "env": ["MONGODB_URI", "NODE_ENV"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "persistent": true,
      "cache": false,
      "env": ["MONGODB_URI", "NODE_ENV"]
    },
    "start": {
      "cache": false,
      "persistent": true,
      "env": ["MONGODB_URI", "NODE_ENV", "PORT"]
    }
  }
}
